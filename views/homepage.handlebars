{{!-- DISPLAYS A LIST OF ALL POSTS --}}
<ul class="no-list">
  {{#each post as |one|}}

  <li class="outlined">
    <article>
      <div>
        <a href="{{one.title}}" target="_blank">{{one.title}}</a>
        <span>({{content}})</span>
      </div>
      <div>
        {{one.likes_count}} likes(s) by {{one.user.username}} on
        {{one.date_posted}}
        |
        <a href="/post/{{one.id}}">{{one.comments.length}} comment(s)</a>
        <strong>{{one.user.github}}</strong>
      </div>
    </article>
  </li>

  {{/each}}
</ul>